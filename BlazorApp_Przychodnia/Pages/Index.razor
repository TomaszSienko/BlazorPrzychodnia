@page "/"
@using BlazorApp_Przychodnia.Models
@inject NavigationManager NavigationManager
@layout LogonLayout
		<div class="logon_screen">
		    <img src="Images/icon.ico" class="logo-img" alt="icon">
			<h4>LOGOWANIE DO SYSTEMU</h4>
            <input type="text" name="login" placeholder="Wpisz swój login" @bind-value="@login" />
            <input type="password" name="password" placeholder="Wpisz swoje hasło" @bind-value="@password" />

	
            <button class="button" @onclick="TrytoLog">Zaloguj</button>
	
		</div>
@code {
    public string login;
    private string password;
    bool loged = false;
    PrzychodniaContext dbp = new PrzychodniaContext();
    private void TrytoLog()
        {
        
            
            foreach (var item in dbp.Konta)
            {
                if (item.Login == login && item.Haslo == password)
                {
                
                    loged = true;
                     NavigationManager.NavigateTo("/dashboard");
                    break;
                }
            }
            if (loged != true)
            {
               
               
            }
        }
}